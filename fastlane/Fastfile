default_platform(:ios)

platform :ios do

  #
  # ğŸ”§ Runs before any lane
  #
  before_all do
    setup_ci                      # Setup Fastlane environment for CI (GitHub Actions, etc.)
    load_asc_api_token           # Load App Store Connect API token (env vars must be set)
  end

  #
  # ğŸ” Load App Store Connect API token
  #
  desc "Load the App Store Connect API token"
  lane :load_asc_api_token do
    app_store_connect_api_key(
      key_id: ENV["ASC_KEY_ID"],
      issuer_id: ENV["ASC_ISSUER_ID"],
      key_content: ENV["ASC_KEY_P8"],
      is_key_content_base64: true,
      in_house: false
    )
  end

  #
  # ğŸš€ Beta Release Lane
  #
  desc "Increment build, set version, manage certs, build and upload to TestFlight"
  lane :beta do |options|

    # âœ… Set app version if provided
    if options[:version]
      version = options[:version]
      UI.message("ğŸ“Œ Setting app version to #{version}")
      increment_version_number(version_number: version)
    else
      UI.message("âœ… Skipping version bump. No version provided.")
    end

    # ğŸ”¢ Increment build number using timestamp
    build_number = Time.now.strftime("%Y%m%d%H%M")
    increment_build_number(build_number: build_number)
    UI.message("ğŸš€ Incremented build number to #{build_number}")

    # ğŸ” Automatically manage certificates & profiles using match
    match(
      type: "appstore",               # or "adhoc" if distributing ad hoc
      readonly: false,
      app_identifier: "com.yourcompany.yourapp",  # â¬…ï¸ UPDATE this
      username: "yourappleid@example.com"         # â¬…ï¸ UPDATE this
    )

    # ğŸ›  Build the iOS app
    build_app(
      scheme: "YourAppScheme",       # â¬…ï¸ UPDATE with your scheme
      export_method: "app-store",
      output_directory: "./build",
      output_name: "YourApp.ipa"
    )

    # ğŸš€ Upload to TestFlight using App Store Connect API token
    upload_to_testflight(
      skip_waiting_for_build_processing: true,
      changelog: options[:changelog] || "Automatic build uploaded by Fastlane."
    )

    UI.success("ğŸ‰ Build #{build_number} uploaded to TestFlight!")
  end

end
